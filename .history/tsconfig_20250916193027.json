{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    "types": ["react", "react-native", "node"]
  },
  "include": ["**/*.ts", "**/*.tsx", "types/**/*.d.ts"]
}
